{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnet_resource_group": {
            "type": "string",
            "defaultValue": "my-vnet"
        },
        "vnet_name": {
            "type": "string",
            "defaultValue": "my-vnet"
        },
        "custom_data": {
            "type": "string",
            "defaultValue": ""
        },
        "cloud_init_data": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "key_data":  "ssh-rsa  apollo-guest@Apollos-iMac.local",
        "storage_account_name": "[concat('kubestore',uniqueString(resourceGroup().id))]",
        "init_data": "[concat(parameters('cloud_init_data'),'\n      ','storageAccountName=',variables('storage_account_name'),'\n      ','subscriptionId=',subscription().id,'\n      ','resourceGroup=',resourceGroup().name)]",
        "init_data_master": "[concat(variables('init_data'),'\n      ','isMaster=true')]"
    },
    "resources": [
        {
            "name": "[variables('storage_account_name')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2017-10-01",
            "location":"Central US",
            "kind":"BlobStorage",
            "sku":{
                "name":"Standard_LRS"
            },
            "properties":{
                "accessTier":"Hot"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "kube-master-nic",
            "apiVersion": "2017-06-01",
            "location": "centralus",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), 'default')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ]
            }
        },
        {
            "name": "KubeClusterLoadBalancer",
            "apiVersion": "2017-08-01",
            "type": "Microsoft.Network/loadBalancers",
            "location": "Central US",
            "dependsOn": [],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), 'default')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "default"
                    }
                ]
            }
        },
        {
            "name": "KubeMaster",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-12-01",
            "location": "Central US",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "osProfile": {
                    "computerName": "kubemaster",
                    "adminUsername": "kearl",
                    "customData": "[base64(replace(parameters('custom_data'), '${cloud-init-data}', variables('init_data_master')))]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/kearl/.ssh/authorized_keys",
                                    "keyData": "[variables('key_data')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04-LTS",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces','kube-master-nic')]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces','kube-master-nic')]"
            ]
        },
        {
            "name": "KubeScaleSet",
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "apiVersion": "2017-03-30",
            "location": "Central US",
            "sku": {
                "name": "Standard_D2s_v3",
                "tier": "Standard",
                "capacity": 2
            },
            "properties": {
                "virtualMachineProfile": {
                    "osProfile": {
                        "computerNamePrefix": "kubeNode",
                        "adminUsername": "kearl",
                        "customData": "[base64(replace(parameters('custom_data'), '${cloud-init-data}', variables('init_data')))]",
                        "linuxConfiguration": {
                            "disablePasswordAuthentication": true,
                            "ssh": {
                                "publicKeys": [
                                    {
                                        "path": "/home/kearl/.ssh/authorized_keys",
                                        "keyData": "[variables('key_data')]"
                                    }
                                ]
                            }
                        }
                    },
                    "storageProfile": {
                        "imageReference": {
                            "publisher": "Canonical",
                            "offer": "UbuntuServer",
                            "sku": "16.04-LTS",
                            "version": "latest"
                        }
                    },
                    "networkProfile": {
                        "networkInterfaceConfigurations": [
                            {
                                "name": "KubeClusterNic",
                                "properties": {
                                    "primary": true,
                                    "ipConfigurations": [
                                        {
                                            "name": "KubeClusterIP",
                                            "properties": {
                                                "primary": true,
                                                "subnet": {
                                                    "id": "[resourceId(parameters('vnet_resource_group'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnet_name'), 'default')]"
                                                },
                                                "loadBalancerBackendAddressPools": [
                                                    {
                                                        "id": "[reference('KubeClusterLoadBalancer', '2017-08-01').backendAddressPools[0].id]"
                                                    }
                                                ]
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                "upgradePolicy": {
                    "mode": "Manual"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat('KubeMaster','/ManagedIdentityExtensionForLinux')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', 'KubeMaster')]"
            ],
            "properties": {
                "publisher": "Microsoft.ManagedIdentity",
                "type": "ManagedIdentityExtensionForLinux",
                "typeHandlerVersion": "1.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "port": 50342
                },
                "protectedSettings": {}
            }
        }
    ],
    "outputs": {
        "instanceIds": {
            "type": "object",
            "value": "[reference('KubeScaleSet')]"
        }
    }
}